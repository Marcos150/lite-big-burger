DEF MAX_ENTITIES EQU 20
EXPORT DEF SIZEOF_CMP EQU 8
DEF SIZEOF_ARRAY_CMP EQU MAX_ENTITIES * SIZEOF_CMP

;; COMPONENT INFO STRUCTURE
RSRESET
DEF CMP_INFO_CMPS   RB 1
DEF CMP_INFO_TAGS   RB 1
DEF CMP_INFO_TYPE   RB 1
DEF CMP_INFO_UNUSED RB 1

;; COMPONENT BITS
DEF CMP_BIT_USED EQU 7
DEF CMP_BIT_ALIVE EQU 6
DEF CMP_BIT_PHYSICS EQU 5
DEF CMP_BIT_RENDER EQU 4
DEF CMP_BIT_CONTROLLABLE EQU 3 ;; Prota
DEF CMP_BIT_2_SPRITES EQU 2
DEF CMP_BIT_INGREDIENT EQU 1
DEF CMP_BIT_HAZARD EQU 0

;; COMPONENT MASKS
DEF CMP_MASK_USED = (1 << CMP_BIT_USED)
DEF CMP_MASK_ALIVE = (1 << CMP_BIT_ALIVE)
DEF CMP_MASK_PHYSICS = (1 << CMP_BIT_PHYSICS)
DEF CMP_MASK_RENDER = (1 << CMP_BIT_RENDER)
DEF CMP_MASK_CONTROLLABLE = (1 << CMP_BIT_CONTROLLABLE)
DEF CMP_MASK_2_SPRITES= (1 << CMP_BIT_2_SPRITES)
DEF CMP_MASK_INGREDIENT = (1 << CMP_BIT_INGREDIENT)
DEF CMP_MASK_HAZARD= (1 << CMP_BIT_HAZARD)

;; USEFUL VALUES
DEF UNUSED_COMPONENT EQU $00
DEF RESERVED_COMPONENT EQU CMP_MASK_USED
DEF ENTITY_WITH_ALL_1_SPRITE EQU (CMP_MASK_USED | CMP_MASK_ALIVE | CMP_MASK_RENDER | CMP_MASK_PHYSICS | CMP_MASK_CONTROLLABLE)
DEF ENTITY_NO_PHYSICS EQU (CMP_MASK_USED | CMP_MASK_ALIVE | CMP_MASK_RENDER | CMP_MASK_CONTROLLABLE | CMP_MASK_2_SPRITES)
DEF ENTITY_NO_PHYSICS_NO_CONTROLLABLE EQU (CMP_MASK_USED | CMP_MASK_ALIVE | CMP_MASK_RENDER | CMP_MASK_2_SPRITES)
DEF ENTITY_NO_PHYSICS_1_SPRITE EQU (CMP_MASK_USED | CMP_MASK_ALIVE | CMP_MASK_RENDER | CMP_MASK_CONTROLLABLE)
DEF ENTITY_NO_PHYSICS_NO_CONTROLLABLE_1_SPRITE EQU (CMP_MASK_USED | CMP_MASK_ALIVE | CMP_MASK_RENDER )
DEF ENTITY_INGREDIENT_SPAWNING EQU (CMP_MASK_USED | CMP_MASK_ALIVE | CMP_MASK_RENDER | CMP_MASK_2_SPRITES | CMP_MASK_INGREDIENT )
DEF ENTITY_HAZARD_SPAWNING EQU (CMP_MASK_USED | CMP_MASK_ALIVE | CMP_MASK_PHYSICS | CMP_MASK_RENDER | CMP_MASK_HAZARD )
DEF INVALID_COMPONENT EQU $FF
DEF VALID_ENTITY EQU (CMP_MASK_USED | CMP_MASK_ALIVE)

;; COMPONENT SPRITE STRUCTURE
RSRESET
DEF CMP_SPRITE_Y     RB 1
DEF CMP_SPRITE_X     RB 1
DEF CMP_SPRITE_TILE  RB 1
DEF CMP_SPRITE_PROPS RB 1
DEF CMP_SPRITE_Y_2     RB 1
DEF CMP_SPRITE_X_2     RB 1
DEF CMP_SPRITE_TILE_2  RB 1
DEF CMP_SPRITE_PROPS_2 RB 1

;; COMPONENT PHYSICS STRUCTURE
RSRESET
DEF CMP_PHYSICS_VY     RB 1
DEF CMP_PHYSICS_VX     RB 1
DEF CMP_PHYSICS_AY     RB 1
DEF CMP_PHYSICS_UNUSED RB 1